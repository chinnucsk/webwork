<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{key}} {{date}}</title>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
 <script type="text/javascript">                                         
    $(document).ready(function() {
      $("#delete").click(function() {
         $.ajax({ url: '/work/{{key}}',
             type: 'DELETE',
             success: function( response ) {
              alert( "{{key}} deleted" );
              window.location.href="/template/{{client}}";
            },
            error: function( response ) {
             alert( "Delete of {{key}} failed" );
           }
          });
        });
     });                                   
 </script>      
</head>
<body>
<h1>{{client}}</h1>
<h2>Edit {{date}} entry</h2>
<form method="post" action="/work/{{key}}">
<input type="hidden" name="client" value="{{client}}"/>
<label for="rate">Rate</label><input type="text" id="rate"
name="rate" value="{{rate}}"/>
<label for="rate_period">Rate Period</label>
<select id="rate_period" name="rate_period">
  <option value="day" {{#rate_period_is_day}}selected{{/rate_period_is_day}}>Day</option>
  <option value="hour" {{#rate_period_is_hour}}selected{{/rate_period_is_hour}}>Hour</option>
</select>
<label for="units">Units</label><input type="text" id="units"
name="units" value="{{units}}"/>
<label for="date">Date</label>
<input type="text" name="date" id="date" value="{{date}}"/>
<input type="submit" value="update"/> <input type="button" value="delete" id="delete"/>
</form>
</body>
</html>